<!DOCTYPE html>
<html>
<head>
  <title>Totem</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  Signed in as <%= current_user.login %> | <%= link_to "Logout", '/logout' %>
  | <%= link_to "Categories", categories_path %>
  | <%= link_to "New Category", new_category_path %>
  | <%= link_to "Wins", wins_path %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>

<%= react_component('RootComponent', {data_jason: @categories.to_json}) %>


</body>
</html>
